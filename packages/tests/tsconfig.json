{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "epoml": ["../epoml/src"],
      "epoml/*": ["../epoml/src/*"]
    }
  },
  "include": ["src/**/*", "../epoml/src/**/*"],
  "exclude": ["node_modules", "dist"]
}